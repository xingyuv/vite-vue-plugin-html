{
  "name": "vite-vue-plugin-html-monorepo",
  "version": "1.0.0",
  "private": false ,
  "scripts": {
    "stub": "pnpm run prepack --filter ./packages -- --stub",
    "postinstall": "pnpm run stub",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint:pretty": "pretty-quick --staged",
    "lint:eslint": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "test": "vitest"
  },
  "author": "xingyuv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xingyuv/vite-vue-plugin-html"
  },
  "bugs": {
    "url": "https://github.com/xingyuv/vite-vue-plugin-html/issues"
  },
  "homepage": "https://github.com/xingyuv/vite-vue-plugin-html/tree/master/#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/html-minifier-terser": "^7.0.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.15.6",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-html": "^7.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.6",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "unbuild": "^1.1.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --ext .ts"
    ],
    "packages/**/*.d.ts": [
      "eslint --ext .ts"
    ]
  }
}
