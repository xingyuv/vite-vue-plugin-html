{
  "name": "vite-vue-plugin-html-monorepo",
  "version": "1.0.3",
  "private": false,
  "scripts": {
    "stub": "pnpm --filter ./packages run prepack -- --stub",
    "postinstall": "pnpm run stub",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint:pretty": "pretty-quick --staged",
    "lint:eslint": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "test": "vitest"
  },
  "author": "xingyuv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xingyuv/vite-vue-plugin-html"
  },
  "bugs": {
    "url": "https://github.com/xingyuv/vite-vue-plugin-html/issues"
  },
  "homepage": "https://github.com/xingyuv/vite-vue-plugin-html/tree/master/#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@types/html-minifier-terser": "^7.0.1",
    "@types/jsdom": "^21.1.4",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^7.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --ext .ts"
    ],
    "packages/**/*.d.ts": [
      "eslint --ext .ts"
    ]
  }
}
